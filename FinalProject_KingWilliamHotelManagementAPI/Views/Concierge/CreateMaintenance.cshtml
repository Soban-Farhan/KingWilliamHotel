@model KingWilliamHotelManagementAPI.Models.TblRoomMaintenance

@{
    ViewData["Title"] = "CreateMaintenance";
}

<div class="text-center">
    <h1>Create Maintenance Request</h1>
</div>
<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        <hr />
        <form asp-action="CreateMaintenance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-4">
                    <label>Employee: </label>
                    <select asp-for="EmployeeId" class="form-control">
                        @foreach (var x in ViewBag.EmployeeId)
                        {
                            <option value="@x.employeeId"> @x.employeeName </option>
                        }
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label>Room Number: </label>
                    <select asp-for="RoomNumber" class="form-control" asp-items="ViewBag.RoomNumber"></select>
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label>Maintenance:</label>
                    <select asp-for="MaintenanceCode" class="form-control">
                        <option value="1">Lighting</option>
                        <option value="2">Plubing</option>
                        <option value="3">Furniture</option>
                        <option value="4">Paint</option>
                        <option value="5">Walls</option>
                        <option value="6">Other</option>
                    </select>
                    <span asp-validation-for="MaintenanceCode" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-12">
                    <label>Description:</label>
                    <textarea asp-for="Description" class="form-control" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="text-right form-group">
                <br />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-1"></div>
</div>
