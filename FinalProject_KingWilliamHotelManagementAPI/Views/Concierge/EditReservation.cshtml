@model KingWilliamHotelManagementAPI.Models.ReservationModel

@{
    ViewData["Title"] = "Reservation";
}

<h1>Reservation</h1>
<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        <form asp-action="EditReservation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Country" class="form-control" type="hidden" />
            <input asp-for="PostalCode" class="form-control" type="hidden" />
            <input asp-for="City" class="form-control" type="hidden" />
            <input asp-for="StreetName" class="form-control" type="hidden" />
            <input asp-for="StreetNumber" class="form-control" type="hidden" />
            <input asp-for="PersonID" class="form-control" type="hidden" />
            <input asp-for="ReservationID" class="form-control" type="hidden" />
            <div class="row">
                <div class="col-lg">
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg">
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-7">
                    <div class="form-group">
                        <label asp-for="EmailAddress"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-5">
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @*<div class="row">
            <div class="col-2">
                <div class="form-group">
                    <label asp-for="StreetNumber"></label>

                    <span asp-validation-for="StreetNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg">
                <div class="form-group">
                    <label asp-for="StreetName"></label>

                    <span asp-validation-for="StreetName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg">
                <div class="form-group">
                    <label asp-for="City"></label>

                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg">
                <div class="form-group">
                    <label asp-for="Country"></label>

                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg">
                <div class="form-group">
                    <label asp-for="PostalCode"></label>

                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>
        </div>*@
            <hr />
            <div class="row">
                <div class="col-lg">
                    <div class="form-group">
                        <label asp-for="RoomNumber"></label>
                        <select asp-for="RoomNumber" class="form-control" asp-items="ViewBag.RoomNumber"></select>
                        <span asp-validation-for="RoomNumber" class="text-danger"></span>
                        <a id="housePreview" href="">Preview the room?</a>
                    </div>
                </div>
                <div class="col-lg">
                    <div class="form-group">
                        <label asp-for="ExpectedArrivalDate"></label>
                        <input asp-for="ExpectedArrivalDate" class="form-control" />
                        <span asp-validation-for="ExpectedArrivalDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg">
                    <div class="form-group">
                        <label asp-for="ExpectedLeaveDate"></label>
                        <input asp-for="ExpectedLeaveDate" class="form-control" />
                        <span asp-validation-for="ExpectedLeaveDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg">
                    <div class="form-group">
                        <label asp-for="Notes"></label>
                        <textarea asp-for="Notes" class="form-control"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="text-right form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-1"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        $(document).ready(function () {
            $("#PhoneNumber").mask("(000) 000-0000")
            $('#PostalCode').mask('S0S0S0');

            $("#housePreview").attr("href", "../Home/Room/" + $("#RoomNumber option:selected").text());

            $("#RoomNumber").change(function () {
                $("#housePreview").attr("href", "../Home/Room/" + $("#RoomNumber option:selected").text());
            });

        });

    </script>
}