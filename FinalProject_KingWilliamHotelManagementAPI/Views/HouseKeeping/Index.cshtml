@model IEnumerable<KingWilliamHotelManagementAPI.Models.HouseKeepingModel>

@{
    ViewData["Title"] = "Request";
}

<h2 class="text-center"> House Keeping Requests </h2>
<br/>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.employeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.roomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.houseKeepingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.employeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.roomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.houseKeepingDate)
                </td>
                <td>
                    <a asp-action="DeleteHouseKeeping" asp-route-id="@item.houseKeepingId"> Done </a>
                </td>
            </tr>
        }
    </tbody>
</table>
